<?xml version='1.0' encoding='utf-8'?>
<widget id="app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>App</name>
    <description>App</description>
    <author email="" href="" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-navigation href="*://*/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="Orientation" value="default" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="Fullscreen" value="true" />
    <preference name="EnableViewportScale" value="false" />
    <preference name="AllowInlineMediaPlayback" value="true" />
    <platform name="android">
        <content src="index.html" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <content src="http://localhost:49000" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <edit-config file="*-Info.plist" mode="merge" target="NSLocationWhenInUseUsageDescription">
            <string>Need your location in order to find the best restaurant near you.</string>
        </edit-config>
    </platform>
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="SplashScreenDelay" value="0" />
    <preference name="FadeSplashScreen" value="true" />
    <preference name="FadeSplashScreenDuration" value="500" />
    <splash src="res/screen/Default@2x~universal~anyany.png" />
    <plugin name="cordova-plugin-statusbar" spec="^2.4.1" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <preference name="StatusBarDefaultScrollToTop" value="true" />
    <plugin name="cordova-plugin-file" spec="^6.0.1" />
    <preference name="iosPersistentFileLocation" value="Library" />
    <preference name="AlternateContentSrc" value="index.html" />
    <plugin name="cordova-plugin-dialogs" spec="^2.0.1" />
    <plugin name="cordova-plugin-inappbrowser-wkwebview" spec="^1.0.7" />
    <plugin name="cordova-plugin-geolocation" spec="^4.0.1" />
    <plugin name="cordova-plugin-device" spec="^2.0.2" />
    <plugin name="cordova-plugin-wkwebview-engine" spec="^1.1.4" />
    <plugin name="spark-local-webserver" spec="^2.4.2" />
    <plugin name="cordova-plugin-keychain-touch-id-ios" spec="^3.2.2" />
    <plugin name="cordova-plugin-wkwebview-cookie-sync" spec="^1.1.4" />
    <engine name="ios" spec="~5.0.0" />
    <plugin name="cordova-plugin-cocoapod-support" spec="1.6.0" />
</widget>
